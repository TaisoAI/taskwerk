{
  "name": "taskwerk",
  "version": "0.1.6",
  "description": "A lightweight CLI task manager optimized for human-AI collaboration workflows",
  "main": "src/cli.js",
  "type": "module",
  "bin": {
    "taskwerk": "./bin/taskwerk.js",
    "twrk": "./bin/taskwerk.js"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "scripts": {
    "start": "node bin/taskwerk.js",
    "test": "node scripts/test.js",
    "test:watch": "node --test --watch tests/**/*.test.js",
    "lint": "eslint src/ tests/ bin/",
    "lint:fix": "eslint src/ tests/ bin/ --fix",
    "format": "prettier --write src/ tests/ bin/",
    "format:check": "prettier --check src/ tests/ bin/",
    "prepack": "npm run lint && npm run format:check && npm run test",
    "prepublishOnly": "npm run prepack",
    "dev": "node bin/taskwerk.js",
    "build": "node scripts/build.js",
    "build:minified": "npm run build && node scripts/build-minified.js",
    "build:exe": "npm run build && node scripts/build-executable.js",
    "build:pkg": "pkg . --out-path dist",
    "clean": "rm -rf dist/ build/ coverage/ .nyc_output/"
  },
  "keywords": [
    "task",
    "cli",
    "project-management",
    "ai",
    "llm",
    "git",
    "markdown"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "commander": "^11.1.0"
  },
  "devDependencies": {
    "esbuild": "^0.25.5",
    "eslint": "^8.57.0",
    "pkg": "^5.8.1",
    "prettier": "^3.2.5"
  },
  "files": [
    "bin/",
    "src/",
    "README.md"
  ],
  "pkg": {
    "targets": [
      "node18-linux-x64",
      "node18-macos-x64",
      "node18-macos-arm64",
      "node18-win-x64"
    ],
    "outputPath": "dist",
    "scripts": [
      "src/**/*.js"
    ]
  }
}
