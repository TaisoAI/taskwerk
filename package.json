{
  "name": "taskwerk",
  "version": "0.4.3",
  "author": "manu chatterjee <deftio@deftio.com>",
  "description": "A git-aware task management CLI for developers and AI agents working together",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/deftio/taskwerk.git"
  },
  "main": "src/index.js",
  "type": "module",
  "bin": {
    "taskwerk": "./src/cli/index.js",
    "twrk": "./src/cli/index.js"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "scripts": {
    "start": "node src/cli/index.js",
    "test": "node --test tests/**/*.test.js",
    "test:coverage": "c8 node --test tests/**/*.test.js",
    "test:watch": "node --test --watch tests/**/*.test.js",
    "test:vitest": "vitest run test/",
    "test:vitest:coverage": "vitest run test/ --coverage",
    "lint": "eslint src/ tests/",
    "lint:fix": "eslint src/ tests/ --fix",
    "format": "prettier --write src/ tests/",
    "format:check": "prettier --check src/ tests/",
    "dev": "node src/cli/index.js",
    "prebuild": "node scripts/update-version.js",
    "build": "node scripts/build.js"
  },
  "keywords": [
    "task",
    "cli",
    "project-management",
    "ai",
    "llm",
    "git",
    "markdown"
  ],
  "license": "MIT",
  "dependencies": {
    "better-sqlite3": "^12.2.0",
    "chalk": "^5.3.0",
    "commander": "^11.1.0",
    "yaml": "^2.3.4"
  },
  "devDependencies": {
    "@vitest/coverage-v8": "^3.2.4",
    "c8": "^10.1.3",
    "esbuild": "^0.25.5",
    "eslint": "^8.57.0",
    "prettier": "^3.2.5"
  },
  "files": [
    "src/",
    "README.md",
    "LICENSE"
  ],
  "preferGlobal": true
}
